---
import CardLaunch from './CardLaunch.astro';
import { getLatestLaunches } from '../services/spacex';

const launches = await getLatestLaunches();
---

<section class='grid gap-8 sm:grid-cols-2 lg:grid-cols-3'>
  {
    launches.map(({ success, flight_number, links, id, details }) => (
      <CardLaunch
        id={id}
        img={links.patch.small}
        details={details}
        flightNumber={flight_number}
        success={success}
      />
    ))
  }
</section>
